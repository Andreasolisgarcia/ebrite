<section class="jumbotron text-center">
<div class="container">
  <h1> <%= @event.title%> </h1>
  <dt>Location</dt>
  <dd><p><%= @event.location%></p></dd>
  <dt>Description</dt>
  <p> <%= @event.description %></p>
  <dt>Date</dt>
  <p> <%= @event.start_date %></p>
  <dt>Duration</dt>
  <p> <%= @event.duration %></p>
  <dt>Price</dt>
  <p> <%= @event.price %></p>
  <p>
  <a class="btn btn-primary my-2" <%= link_to "Edit", edit_event_path(@event.id), style: "text-decoration: none;" %></a>
  <%= button_to event_path(@event.id), method: :delete, class: "btn btn-danger",onclick: "return confirm('Are you sure ?');", style: "text-decoration: none;" do %>
    Deleate
  <% end %>
  </p>
</div>