<div class="row">
<% @events.each_with_index do |event,index| %>
  <div class="col-sm-4">
    <div class="card" style="width: 18rem; margin-bottom: 20px;">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
         <p><%= event.location%></p>
        <%= link_to "See more", event_path(event), class:"btn btn-light"%>
      </div>
    </div>
  </div>
<% end %>
</div>